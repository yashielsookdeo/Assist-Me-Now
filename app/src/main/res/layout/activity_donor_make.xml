<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donors.DonorMakeActivity"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/tl_circle_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-20dp"
            android:background="@drawable/shape_circle_lp" />
        <View
            android:id="@+id/tl_circle_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="-90dp"
            android:layout_toEndOf="@id/tl_circle_1"
            android:background="@drawable/shape_circle_dp" />
        <View
            android:id="@+id/br_circle_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginEnd="-20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_circle_lp" />
        <View
            android:id="@+id/br_circle_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="-120dp"
            android:layout_alignTop="@id/br_circle_1"
            android:layout_toStartOf="@id/br_circle_1"
            android:background="@drawable/shape_circle_dp" />

        <ImageView
            android:id="@+id/b_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"
            android:layout_marginEnd="-50dp"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@id/tl_circle_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/b_back"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-205dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Make a Donation"
            android:textColor="#8455c8"
            android:textSize="25sp" />

        <RelativeLayout
            android:id="@+id/c_c"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/c_h_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8455c8"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20sp"
                android:text="Available Donations"/>
            <TextView
                android:id="@+id/c_t_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c_h_1"
                android:textColor="#8455c8"
                android:fontFamily="@font/nunito_sans"
                android:textSize="16sp"
                android:text="The following are available donations.\nTap a donation to view its items."/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/c_r"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/c_t_1"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/input_c_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/c_c"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/input_h_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="Donation Name:"
                android:textColor="#8455c8"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/input_name"
                android:layout_below="@id/input_h_name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="e.g bakery donation"
                style="@style/Theme.AssistMeNow.InputField"/>
        </RelativeLayout>
        <Button
            android:id="@+id/b_dropoff"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_c_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#ffffff"
            android:text="Choose Drop off Location" />
        <Button
            android:id="@+id/b_createdonation"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/b_dropoff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#ffffff"
            android:text="Finalize Donation" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>