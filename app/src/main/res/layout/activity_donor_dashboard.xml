<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donors.DonorDashboardActivity"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/tl_circle_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-20dp"
            android:background="@drawable/shape_circle_lp" />
        <View
            android:id="@+id/tl_circle_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="-90dp"
            android:layout_toEndOf="@id/tl_circle_1"
            android:background="@drawable/shape_circle_dp" />
        <View
            android:id="@+id/br_circle_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginEnd="-20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_circle_lp" />
        <View
            android:id="@+id/br_circle_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="-120dp"
            android:layout_alignTop="@id/br_circle_1"
            android:layout_toStartOf="@id/br_circle_1"
            android:background="@drawable/shape_circle_dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tl_circle_1"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-220dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Donor Dashboard"
            android:textColor="#8455c8"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_about"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="235dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#ffffff"
            android:text="About" />

        <Button
            android:id="@+id/b_createdonation"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/b_about"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#ffffff"
            android:text="Make a Donation" />

        <Button
            android:id="@+id/b_donations"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/b_createdonation"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#ffffff"
            android:text="Donations In-Progress" />

        <Button
            android:id="@+id/b_pickups"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/b_donations"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#ffffff"
            android:text="Available Pick Ups" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>