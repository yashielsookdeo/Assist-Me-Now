<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donors.DonorDropOffActivity"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/tl_circle_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-20dp"
            android:background="@drawable/shape_circle_lp" />
        <View
            android:id="@+id/tl_circle_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="-90dp"
            android:layout_toEndOf="@id/tl_circle_1"
            android:background="@drawable/shape_circle_dp" />
        <View
            android:id="@+id/br_circle_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginEnd="-20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_circle_lp" />
        <View
            android:id="@+id/br_circle_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="-120dp"
            android:layout_alignTop="@id/br_circle_1"
            android:layout_toStartOf="@id/br_circle_1"
            android:background="@drawable/shape_circle_dp" />

        <ImageView
            android:id="@+id/b_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"
            android:layout_marginEnd="-50dp"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@id/tl_circle_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/b_back"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-215dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Drop Off Location"
            android:textColor="#8455c8"
            android:textSize="25sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/nunito_sans"
            android:text="Add your current location as a drop off.\nThe drop off is displayed as a red marker on the map below."
            android:textColor="#8455c8"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/c_c"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_marginTop="135dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/layout_border"
            android:padding="5dp">
            <com.google.android.gms.maps.MapView
                android:id="@+id/m_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <Button
            android:id="@+id/b_adddropoff"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/c_c"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#ffffff"
            android:text="Add Drop Off" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>