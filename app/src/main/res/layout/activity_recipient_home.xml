<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".Recipient.RecipientHomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:text="Home"

        android:textColor="#000000"
        android:textSize="24sp" />



    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Request Donation"
        android:layout_gravity="center"
        android:onClick="openRecipientActivity"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner"/>


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Current Requests"
        android:layout_gravity="center"
        android:onClick="openOngoingRequestsActivity"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_gravity="center"
        android:onClick="openAboutActivity"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner"/>

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:hint="Notifications"
        android:layout_height="wrap_content"
        android:layout_margin="100dp"
        android:text=""
        android:layout_gravity="left"

        android:textColor="#000000"
        android:textSize="10dp" />


</LinearLayout>