<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".Donors.DonorHomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:text="Home"

        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Make Donation"
        android:layout_gravity="center"
        android:onClick="openDonorActivity"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Donations in-progress"
        android:layout_gravity="center"
        android:onClick="openOngoingDonationsActivity"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_gravity="center"
        android:onClick="openAboutActivity"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_corner"/>

</LinearLayout>